extends ../layout.jade

block content
  script.
    window.$item = !{JSON.stringify(item).replace(/<\//g, "<\\/")}
  section#main.container
    .card
      .row.mp0
        .col-sm-6.mp0
          img.img-center.img-view.card-img-top(src=`${item.img}`)
        .col-sm-6.mp0
          div.card-body
            h5.card-title.title-view !{item.title}
            p.lead.price-view $ !{item.price}
            form(onsubmit=`checkout(event, window.$item)`)
              .form-group
                .input-group#count
                  .input-group-prepend
                    sapn.input-group-text Cantidad: 
                  input#count.form-control(
                    type="number"
                    name="qty"
                    min="1"
                    value="1"
                    max=`${item.qty}`)
                  .input-group-append
                    sapn.input-group-text (!{item.qty} disponibles)
              button.btn.btn-primary.btn-sm.btn-block.mr-2(
              type="submit") Comparar ahora
            button.btn.btn-outline-warning.btn-sm.btn-block.mt-2 Agregar al carrito
            hr
            p.lead DescripciÃ³n:
            p !{item.desc}
  script(src="/js/items/one.js")
