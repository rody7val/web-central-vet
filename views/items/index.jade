extends ../layout.jade

block content
  //- dinamic vars
  script.
    window.$user = !{JSON.stringify(session && session.user ? session.user : null).replace(/<\//g, "<\\/")}
  section#breadcrumb.container
    nav(aria-label="breadcrumb")
      ol(class="breadcrumb")
        li.breadcrumb-item
          a(href="/") Inicio
        li.breadcrumb-item.active(aria-current="page") Productos
  section#main.items.container
    form.form-inline
      input.form-group.form-control.form-control-sm.mb-2.mr-2(
        oninput="getItemsSearch(event, this.name)"
        type="text"
        name="filter_title"
        placeholder="Buscar"
        required)
      .categories(style="display: none")
      if (session && session.user) ? session.user.email === "rod7val@gmail.com" : null
        small
          button.btn.btn-primary.btn-sm.mb-3(
          data-toggle="modal"
          data-target="#addItem") Crear Producto
    include ./createItem.jade
    include ./createCategory.jade
    ul#items.list-group cargando...
  script(src="/js/items/all.js")
